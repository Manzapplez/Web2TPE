        <table class="artist-table">
            <tr>
                <td>Nombre</td>
                <td><?= htmlspecialchars($u->name) ?></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><?= htmlspecialchars($u->email) ?></td>
            </tr>
            <tr>
                <td>Foto de perfil</td>
                <td>
